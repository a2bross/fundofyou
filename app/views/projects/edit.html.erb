<div class="container">
  <div class="row">
    <%= link_to "Tous les projects", projects_path %>
    <div class="text-center"><h2>Editer <%= @project.name %></h2></div>
    <div class="col-xs-12 col-sm-offset-4 col-sm-4">

      <%= simple_form_for(@project) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.association :charity %>
          <%= f.input :contact_name %>
          <%= f.input :address %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.input :budget %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input :environment, as: :boolean %>
          <%= f.input :humanitarian, as: :boolean %>
          <%= f.input :social, as: :boolean %>
          <%= f.input :preservation, as: :boolean %>
          <%= f.input :education, as: :boolean %>
          <%= f.input :research, as: :boolean %>
          <%= f.input :local, as: :boolean %>
          <%= f.input :abroad, as: :boolean %>
          <%= f.input :urgency, as: :boolean %>
          <%= f.input :completion_rate %>
          <%= f.input :status %>
        </div>

        <div class="form-actions">
           <%= f.submit class: "btn btn-primary btn-block"%>
        </div>
      <% end %>

    </div>
  </div>
</div>
