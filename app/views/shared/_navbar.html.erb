<div class="navbar-wagon <%= yield(:navbar_class) %>">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "charity.png", height: 50 %> <span class="navbar-title"> Fund Of You </span>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Explorer", projects_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Mon compte", user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_out", default: "Déconnexion"), destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>

    <% else %>
      <%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_up", default: "S'inscrire"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
 <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

      <% if user_signed_in? %>

        <!-- Links when logged in -->
        <li><%= link_to "Explorer", projects_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Mon compte", user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to t(".sign_out", default: "Déconnexion"), destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %></li>

      <% else %>
        <li><%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to t(".sign_up", default: "S'inscrire"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
      <% end %>
      </ul>
    </div>
  </div>
</div>

