<%= content_for(:navbar_class, "navbar-static") %>

<div class="template-container">

  <div class="scrollable-content">
    <div class="breadcrumb-centerer">
      <div class="breadcrumb-container text-center">
        <div class="breadcrumb-line"></div>
        <div class="criteria-breadcrumb">
          <div class="criteria-breadcrumb-item criteria-breadcrumb-item-active"><span>1</span>Mes causes</div>
          <div class="criteria-breadcrumb-item"><span>2</span>Mon don</div>
          <div class="criteria-breadcrumb-item"><span>3</span>Mes projets</div>
          <div class="criteria-breadcrumb-item"><span>4</span>Contribuer</div>
        </div>
      </div>
    </div>

    <div class="funnel-main-content">
        <form action="/edit_criteria" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <input type="hidden" name="_method" value="patch">
          <div class="container-fluid">
            <div class="row text-center">
            <span id="no-bullet-mobile" class="hidden hidden-sm hidden-md hidden-lg">Veuillez sélectionner au moins un critère.</span>
              <div class="col-xs-6 col-sm-6 col-md-4">
                <input type="checkbox" class="hidden" value=1 name="environment" id="environment">
                <label for="environment" class="cause-choice hvr-grow">
                  <i class="fa fa-leaf"></i> <div>Ecologie</div>
                  <i class="fa fa-check hidden"></i>
                </label>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-4">
                <input type="checkbox" class="hidden" value=1 name="humanitarian" id="humanitarian">
                <label for="humanitarian" class="cause-choice hvr-grow">
                  <i class="fa fa-life-ring"></i> <div>Humanitaire</div>
                  <i class="fa fa-check hidden"></i>
                </label>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-4">
                <input type="checkbox" class="hidden" value=1 name="social" id="social">
                <label for="social" class="cause-choice hvr-grow">
                  <i class="fa fa-handshake-o"></i> <div>Action sociale</div>
                  <i class="fa fa-check hidden"></i>
                </label>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-4">
                <input type="checkbox" class="hidden" value=1 name="preservation" id="preservation">
                <label for="preservation" class="cause-choice hvr-grow">
                  <i class="fa fa-institution"></i> <div>Patrimoine</div>
                  <i class="fa fa-check hidden"></i>
                </label>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-4">
                <input type="checkbox" class="hidden" value=1 name="education" id="education">
                <label for="education" class="cause-choice hvr-grow">
                  <i class="fa fa-graduation-cap"></i> <div>Education</div>
                  <i class="fa fa-check hidden"></i>
                </label>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-4">
                <input type="checkbox" class="hidden" value=1 name="research" id="research">
                <label for="research" class="cause-choice hvr-grow">
                  <i class="fa fa-flask"></i> <div>Recherche</div>
                  <i class="fa fa-check hidden"></i>
                </label>
              </div>
           </div>
            <h4>Choisir le périmètre d'action :</h4>
            <div class="row text-center local-choices">
              <div class="col-xs-6 col-sm-6 col-md-4">
                <input type="checkbox" class="hidden" value="local" name="scope" id="local" required>
                <label for="local" class="cause-choice hvr-grow">
                  <i class="fa fa-map-marker"></i> <div>Local</div>
                  <i class="fa fa-check hidden"></i>
                </label>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-4">
                <input type="checkbox" class="hidden" value="abroad" name="scope" id="abroad" required>
                <label for="abroad" class="cause-choice hvr-grow">
                  <i class="fa fa-globe"></i> <div>International</div>
                  <i class="fa fa-check hidden"></i>
                </label>
              </div>
            </div>
          </div>
      </form>
    </div>
  </div>

  <div class="fixed-background" style="background-image: linear-gradient(-225deg, rgba(0,10,16,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path "form-background.jpg" %>);">

    <div class="template-text causes-resume">
      <h6><i class="fa fa-heart" aria-hidden="true"></i> Les causes que je soutiens</h6>
      <p><em>Sélectionnez les causes qui vous tiennent à coeur pour trouver les projets qui vous ressemblent.</em></p>
      <p id="causes-selected">
        <span id="no-bullet" class="hidden">Veuillez sélectionner au moins un critère.</span>
        <span id="bullet-environment" class="bullet hidden">Ecologie</span>
        <span id="bullet-humanitarian" class="bullet hidden">Humanitaire</span>
        <span id="bullet-social" class="bullet hidden">Action sociale</span>
        <span id="bullet-preservation" class="bullet hidden">Patrimoine</span>
        <span id="bullet-education" class="bullet hidden">Education</span>
        <span id="bullet-research" class="bullet hidden">Recherche</span>
        <span id="bullet-local" class="bullet hidden">Local</span>
        <span id="bullet-abroad" class="bullet hidden">International</span>
        <span id="bullet-no-scope" class="bullet hidden">Indifférent</span>
      </p>
    </div>

  </div>
  <div class="template-right-cta">
      <%#= link_to 'Découvrir les projets', projects_path, class: "btn button-submit step1-right" %>
      <input type="submit" class="btn button-submit" value="Découvrir les projets">
      <%#= link_to 'Réinitialiser', edit_criteria_path, class: "btn button-reset step1-left" %>
  </div>
</div>






